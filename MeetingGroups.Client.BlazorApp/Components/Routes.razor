@using MeetingGroups.Client.BlazorApp.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization

@* from Blazor Server Application with Keycloak Authentication
    https://github.com/csinisa/blazor_server_keycloak/commit/4a20c0e7155feaf549d271e8ee56aaca9bf22bb9
*@
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <p>Determining session state, please wait...</p>
                </Authorizing>
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>